{% schema %}
  {
    "name": "Custom Meta Section",
    "class": "shopify-section--custom-section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Heading",
        "default": "Related Products"
      },
      {
        "type": "range",
        "id": "web_products_limit",
        "label": "Limit web products",
        "min": 4,
        "max": 50,
        "step": 1,
        "default": 10
      },
      {
        "type": "range",
        "id": "mobile_products_limit",
        "label": "Limit mobile products",
        "min": 2,
        "max": 10,
        "step": 1,
        "default": 4
      }
    ],
    "presets": [
      {
        "name": "Custom Meta Section",
        "category": "Collection"
      }
    ],
    "templates": [
      "404",
      "article",
      "blog",
      "cart",
      "collection",
      "list-collections",
      "index",
      "page",
      "product",
      "search"
    ]
  }
  
  {% endschema %}












  